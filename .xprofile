# Screens
hdmi=$(xrandr | grep ' connected' | grep 'HDMI' | awk '{print $1}')

if [ "$hdmi" = "HDMI-1" ]; then
  xrandr \
    --output DP-0 --primary --mode 3440x1440 \
    --output HDMI-1 --mode 3840x2160 &
else
  xrandr \
    --output DP-0 --primary --mode 3440x1440 \
    --output HDMI-1 --off \
    --output eDP-1 --off &
fi
